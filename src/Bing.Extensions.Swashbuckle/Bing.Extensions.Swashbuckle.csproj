<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../build/version.props"></Import>
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Bing.Extensions.Swashbuckle是扩展Swashbuckle.AspNetCore一些常用操作，便于使用以及过滤。</Description>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\output\release\</OutputPath>
    <DocumentationFile>..\..\output\release\netstandard2.0\Bing.Extensions.Swashbuckle.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\output\release\</OutputPath>
    <DocumentationFile>..\..\output\release\netstandard2.0\Bing.Extensions.Swashbuckle.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\export.js" />
    <None Remove="Resources\index.html" />
    <None Remove="Resources\jquery.min.js" />
    <None Remove="Resources\login.html" />
    <None Remove="Resources\swagger-common.css" />
    <None Remove="Resources\translator.js" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\export.js" />
    <EmbeddedResource Include="Resources\index.html" />
    <EmbeddedResource Include="Resources\jquery.min.js" />
    <EmbeddedResource Include="Resources\login.html" />
    <EmbeddedResource Include="Resources\swagger-common.css" />
    <EmbeddedResource Include="Resources\translator.js" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Filters\Documents\" />
    <Folder Include="Filters\Parameters\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="4.0.1" />
  </ItemGroup>

</Project>
