<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../build/version.props"></Import>
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Bing.Extensions.Swashbuckle是扩展Swashbuckle.AspNetCore一些常用操作，便于使用以及过滤。</Description>
    <RootNamespace />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\output\release\</OutputPath>
    <DocumentationFile>..\..\output\release\netstandard2.0\Bing.Extensions.Swashbuckle.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\output\release\</OutputPath>
    <DocumentationFile>..\..\output\release\netstandard2.0\Bing.Extensions.Swashbuckle.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Attributes\**" />
    <EmbeddedResource Remove="Attributes\**" />
    <None Remove="Attributes\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Bing\Swashbuckle\Resources\export.js" />
    <EmbeddedResource Include="Bing\Swashbuckle\Resources\index.html" />
    <EmbeddedResource Include="Bing\Swashbuckle\Resources\jquery.min.js" />
    <EmbeddedResource Include="Bing\Swashbuckle\Resources\login.html" />
    <EmbeddedResource Include="Bing\Swashbuckle\Resources\swagger-common.css" />
    <EmbeddedResource Include="Bing\Swashbuckle\Resources\translator.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning.ApiExplorer" Version="3.2.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.3.3" />
  </ItemGroup>

</Project>
